@page
@model CRUD.Pages.Productos.EditCategoryModel
@{
	ViewData["Title"] = "Editar Categorias";
}


<div class="card">
	<div class="card-header bg-dar">
		<h2 class="text-info">Editar una categoria</h2>
	</div>

	<div class="card-body">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<input type="hidden" asp-for="Category.Id" />

			<div class="container" style="padding:30px">
				<div class="form-group">
					<div class="row">
						<div class="col-sm-2">
							<label asp-for="Category.CategoryName"></label>
						</div>
						<div class="col-sm-6">
							<input asp-for="Category.CategoryName" class="form-control">
						</div>
						<span asp-validation-for="Category.CategoryName" class="text-danger"></span>

					</div>
				</div>

				<div class="form-group">
					<div class="row">
						<div class="col-sm-2">
							<label asp-for="Category.Descripcion"></label>
						</div>
						<div class="col-sm-6">
							<input asp-for="Category.Descripcion" class="form-control">
						</div>
						<span asp-validation-for="Category.Descripcion" class="text-danger"></span>

					</div>
				</div>

				<div class="form-group mt-4">
					<div class="row">
						<div class="col-sm-2 offset-sm-2">
							<input type="submit" value="Editar" class="btn btn-primary form-contol" />
						</div>
						<div class="col-sm-4">
							<a asp-page="Category" class="btn btn-success form-control">Volver a la lista</a>
						</div>


					</div>
				</div>
			</div>
		</form>
	</div>

</div>
