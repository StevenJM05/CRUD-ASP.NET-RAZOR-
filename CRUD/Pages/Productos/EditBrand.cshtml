@page
@model CRUD.Pages.Productos.EditBrandModel
@{
	ViewData["Title"] = "Editar una marca";
}
<div class="card">
	<div class="card-header bg-dar">
		<h2 class="text-info">Editar una Marca</h2>
	</div>

	<div class="card-body mt-2">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<input type="hidden" asp-for="Brand.id" />

			<div class="container" style="padding:30px">
				<div class="form-group">
					<div class="row">
						<div class="col-sm-2">
							<label asp-for="Brand.BrandName"></label>
						</div>
						<div class="col-sm-6">
							<input asp-for="Brand.BrandName" class="form-control">
						</div>
						<span asp-validation-for="Brand.BrandName" class="text-danger"></span>

					</div>
				</div>

				<div class="form-group mt-2">
					<div class="row">
						<div class="col-sm-2">
							<label asp-for="Brand.Descripcion"></label>
						</div>
						<div class="col-sm-6">
							<input asp-for="Brand.Descripcion" class="form-control">
						</div>
						<span asp-validation-for="Brand.Descripcion" class="text-danger"></span>

					</div>
				</div>

				<div class="form-group mt-2">
					<div class="row">
						<div class="col-sm-2">
							<label asp-for="Brand.Pais"></label>
						</div>
						<div class="col-sm-6">
							<input asp-for="Brand.Pais" class="form-control">
						</div>
						<span asp-validation-for="Brand.Pais" class="text-danger"></span>

					</div>
				</div>

				<div class="form-group mt-4">
					<div class="row">
						<div class="col-sm-2 offset-sm-2">
							<input type="submit" value="Editar" class="btn btn-primary form-contol" />
						</div>
						<div class="col-sm-4">
							<a asp-page="Brand" class="btn btn-success form-control">Volver a la lista</a>
						</div>


					</div>
				</div>
			</div>
		</form>
	</div>

</div>