@page
@model CRUD.Pages.Productos.EditarModel
@{
	ViewData["Title"] = "Editar nuevo producto";
}


<h3 class="text-center">Bienvenido</h3>

<div class="card">
	<div class="card-header bg-dar">
		<h2 class="text-info">Crear un nuevo producto</h2>
	</div>

	<div class="card-body">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<input type="hidden" asp-for="Producto.Id" />

			<div class="container" style="padding:30px">
				<div class="form-group">
					<div class="row">
						<div class="col-sm-2">
							<label asp-for="Producto.NombreProducto"></label>
						</div>
						<div class="col-sm-6">
							<input asp-for="Producto.NombreProducto" class="form-control">
						</div>
						<span asp-validation-for="Producto.NombreProducto" class="text-danger"></span>

					</div>
				</div>

				<div class="form-group">
					<div class="row">
						<div class="col-sm-2">
							<label asp-for="Producto.Descripcion"></label>
						</div>
						<div class="col-sm-6">
							<input asp-for="Producto.Descripcion" class="form-control">
						</div>
						<span asp-validation-for="Producto.Descripcion" class="text-danger"></span>

					</div>
				</div>

				<div class="form-group">
					<div class="row">
						<div class="col-sm-2">
							<label asp-for="Producto.EnStock"></label>
						</div>
						<div class="col-sm-6">
							<input asp-for="Producto.EnStock" class="form-control">
						</div>
						<span asp-validation-for="Producto.EnStock" class="text-danger"></span>

					</div>
				</div>

				<div class="form-group mt-2">
					<div class="row">
						<div class="col-sm-2">
							<label asp-for="Producto.Precio"></label>
						</div>
						<div class="col-sm-6">
							<input asp-for="Producto.Precio" class="form-control">
						</div>
						<span asp-validation-for="Producto.Precio" class="text-danger"></span>

					</div>
				</div>

				<div class="form-group mt-2">
					<div class="row">
						<div class="col-sm-2">
							<label asp-for="Producto.BrandId"></label>
						</div>
						<div class="col-sm-2">
							<select asp-for="Producto.BrandId">
								@if (Model.Brands != null)
								{
									@foreach (var item in Model.Brands)
									{
										<option value="@item.id">@item.BrandName</option>
									}
								}
							</select>
						</div>
					</div>
				</div>

				<div class="form-group mt-2">
					<div class="row">
						<div class="col-sm-2">
							<label asp-for="Producto.CategoryId"></label>
						</div>
						<div class="col-sm-2">
							<select asp-for="Producto.CategoryId">
								@if(Model.categories != null)
								{
									@foreach(var item in Model.categories)
									{
										<option value="@item.Id">@item.CategoryName</option>
									}
								}
							</select>
						</div>
					</div>
				</div>

				<div class="form-group mt-4">
					<div class="row">
						<div class="col-sm-2 offset-sm-2">
							<input type="submit" value="Editar" class="btn btn-primary form-contol" />
						</div>
						<div class="col-sm-4">
							<a asp-page="Index" class="btn btn-success form-control">Volver a la lista</a>
						</div>


					</div>
				</div>
			</div>
		</form>
	</div>

</div>