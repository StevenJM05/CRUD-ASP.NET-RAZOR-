@page
@model CRUD.Pages.Productos.CreateBrandModel
@{
	ViewData["Title"] = "Crear una marca";
}
<h3 class="text-center">Bienvenido</h3>

<div class="card">
	<div class="card-header bg-dar">
		<h2 class="text-info">Crear una nueva marca</h2>
	</div>

	<div class="card-body mt-2">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="container" style="padding:30px">
				<div class="form-group">
					<div class="row">
						<div class="col-sm-2">
							<label asp-for="brand.BrandName">Nombre de la marca</label>
						</div>
						<div class="col-sm-6">
							<input asp-for="brand.BrandName" class="form-control">
						</div>
						<span asp-validation-for="brand.BrandName" class="text-danger"></span>

					</div>
				</div>

				<div class="form-group mt-2">
					<div class="row">
						<div class="col-sm-2">
							<label asp-for="brand.Descripcion"></label>
						</div>
						<div class="col-sm-6">
							<input asp-for="brand.Descripcion" class="form-control">
						</div>
						<span asp-validation-for="brand.Descripcion" class="text-danger"></span>

					</div>
				</div>

				<div class="form-group mt-2">
					<div class="row">
						<div class="col-sm-2">
							<label asp-for="brand.Pais"></label>
						</div>
						<div class="col-sm-6">
							<input asp-for="brand.Pais" class="form-control">
						</div>
						<span asp-validation-for="brand.Pais" class="text-danger"></span>

					</div>
				</div>

				<div class="form-group mt-4">
					<div class="row">
						<div class="col-sm-2 offset-sm-2">
							<input type="submit" value="Crear" class="btn btn-outline-primary form-contol" />
						</div>
						<div class="col-sm-4">
							<a asp-page="Category" class="btn btn-success form-control">Volver a la lista</a>
						</div>
					</div>
				</div>


			</div>
		</form>
	</div>

</div>
